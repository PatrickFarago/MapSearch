{
  "manifest_version": 2,

  "name": "Search Sites",
  "background" : { "scripts": ["background.js"] },
  "description": "Search for locations",
  "version": "1.0",
  "minimum_chrome_version": "6",

  "browser_action": {
    "default_icon": "Search-16.png",
    "default_title": "Search Sites",
    "default_popup": "popup.html"
  },

  "icons": {
    "16": "Search-16.png"
  },

  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
	"contextMenus", 
	"tabs"
  ]
}